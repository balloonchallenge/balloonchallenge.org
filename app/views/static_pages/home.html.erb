<% title "Home" %>
<div class="hero section cta">
    <h1>Global Space Balloon Challenge</h1>
    <div class="left">
        <div class="embed-container">
            <img src="http://placehold.it/1280x720/&text=Video+Here">
        </div>
    </div>
    <div class="right">
        <h3>The largest international high altitude balloon event with a focus on education and innovation.</h3>
        <% if !current_user %>
            <p class="center">Learn More:</p>
            <a href="/sign_up" class="btn full">Sign Up</a>
            <%= link_to "I've flown a High-Altitude Balloon", new_user_session_path, class: 'btn callToAction' %>
            <%= link_to "What is a High-Altitude Balloon?", about_path, class: 'btn callToAction' %>
        <% elsif current_user and current_user.team.nil? %>
            <%= link_to "View teams", teams_path, class: 'btn callToAction' %>
            <%= link_to "Create a team", new_team_path, class: 'btn callToAction' %>
        <% elsif current_user and !current_user.team.nil? %>
            <a href="http://community.balloonchallenge.org" class="btn callToAction">Community</a>
            <%= link_to "Tutorials", tutorials_path, class: 'btn callToAction'%>
        <% end %>
    </div>
</div>
<div class="affiliates section">
    <div class="map_container" style="max-width:100%;">
      <%= render "shared/map" %> 
    </div>
</div>