<h1 class="underline">Sign Up</h1>
<head>
<script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<body>
<div class="content">
    <%= render "devise/shared/links" %> <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div>Confirmation emails have not been sending properly - if you get an error, use the contact us to request an account and we will make one for you. Apologies for the inconvience while we fix the issue.</div>
        <br/>

        <div><%= f.label :email %>
        <%= f.email_field :email, autofocus: true %></div>

        <div><%= f.label :first_name %>
        <%= f.text_field :first_name %></div>

        <div>
            <%= f.label :last_name %>
            <%= f.text_field :last_name %>
        </div>
        
        <div><%= f.check_box :pastlaunch%> I have launched a High Altitude Balloon before (<em>not</em> required)</div>
        <div><%= f.check_box :gsbc_last_year %> I was a part of the Global Space Balloon Challenge last year</div><br />
        <div><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><br/><% end %>
        <%= f.password_field :password, autocomplete: "off" %></div>

        <div><%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %></div>
        
        <div><input type="checkbox" required> I have read and agree to the <a href="/terms_and_conditions.pdf" target="_blank">Terms and Conditions</a></div>

        <div class="g-recaptcha" 
             data-sitekey="6LfFprAZAAAAAJ7SNwU9v6A7V-pmcqHvjZj1KgFS"></div>

       

        <div><%= f.submit "Sign up" %></div>
    <% end %>
</div>
<script>
window.onload = function() {
    var $recaptcha = document.querySelector('#g-recaptcha-response');

    if($recaptcha) {
        $recaptcha.setAttribute("required", "required");
    }
};
</script>
</body>
