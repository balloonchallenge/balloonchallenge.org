<% title "Teams" %>
<div class="primary section">
<h1><%=yield(:title)%></h1>
<ul>
<% @teams.each do |team| %>
  <li><%=link_to team.name, team %></li>
<% end %>
</ul>
<!-- This will only run if a user has no team - it currently throws an error if they don't -->
<% if current_user and current_user.team.nil? %>
<h1>Create a Team!</h1>
<%= form_for(@team) do |f| %>
  <div id="team_name">
    <%= f.text_field :name, placeholder: "Team name"%>
  </div>
  <div id="team_description">
    <%= f.text_area :description, placeholder: "Team description" %>
  </div>
  <%= f.submit "Post" %>
<% end %>
<% end %>
</div>