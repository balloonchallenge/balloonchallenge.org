
<div class="primary section">
<h1>Edit your team</h1>
<%= form_for(@team) do |f| %>
  <div id="team_name">
    <%= f.text_field :name, placeholder: "Team name"%>
  </div>
  <div id="team_description">
    <%= f.text_area :description, placeholder: "Team description" %>
  </div>
  <%= f.submit "Post" %>
<% end %>
<% form_for @team, :url => add_user_to_team_path(@team) do |f| %>
  <%= f.text_field :users, placeholder: "User email"%>
  <%= f.submit "Add users" %>
<% end %>

<%= link_to "Delete", @team, method: :delete, data: {confirm: "You will delete your team. This action is not reversible. Are you sure?"} %>
</div>